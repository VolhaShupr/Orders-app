<mvc:View xmlns:mvc="sap.ui.core.mvc"
          xmlns:f="sap.ui.layout.form"
          xmlns="sap.m"
          controllerName="Olga.Shupranova.app.controller.ShipInfo">
    <VBox class="sapUiSmallMarginEnd">
        <f:SimpleForm id="SimpleFormToolbar"
                      editable="true"
                      layout="ResponsiveGridLayout"
                      labelSpanL="2"
                      labelSpanM="2"
                      emptySpanL="5"
                      emptySpanM="5"
                      columnsL="1"
                      columnsM="1">
            <f:toolbar>
                <Toolbar id="TB1">
                    <Title text="Ship To Form" level="H4" titleStyle="H4"/>
                    <Button icon="sap-icon://edit" press="onInnerShipToEditPress"/>
                </Toolbar>
            </f:toolbar>
            <f:content>
                <Label text="Ship To" />
                <Input value="{odata>shipTo/name}" />

                <Label text="Address" />
                <Input value="{odata>shipTo/address}"/>

                <Label text="ZIP" />
                <Input value="{odata>shipTo/ZIP}"/>

                <Label text="Region"/>
                <Input value="{odata>shipTo/region}"/>

                <Label text="Country" />
                <Input value="{odata>shipTo/country}"/>
            </f:content>
        </f:SimpleForm>
    </VBox>

</mvc:View>