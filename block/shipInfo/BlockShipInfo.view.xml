<mvc:View xmlns:mvc="sap.ui.core.mvc"
          xmlns:f="sap.ui.layout.form"
          xmlns="sap.m">
    <VBox class="sapUiSmallMarginEnd">
        <f:SimpleForm id="SimpleFormToolbar"
                      editable="true"
                      layout="ResponsiveGridLayout"
                      labelSpanL="2"
                      labelSpanM="2"
                      emptySpanL="5"
                      emptySpanM="5"
                      columnsL="1"
                      columnsM="1">
            <f:toolbar>
                <Toolbar id="TB1">
                    <Title text="Ship To Form" level="H4" titleStyle="H4"/>
                    <Button icon="sap-icon://edit"/>
                </Toolbar>
            </f:toolbar>
            <f:content>
                <Label text="Ship To" />
                <Input value="Michael" />

                <Label text="Address" />
                <Input value="Independency square"/>

                <Label text="ZIP" />
                <Input value="000001"/>

                <Label text="Region"/>
                <Input value="Minsk"/>

                <Label text="Country" />
                <Input value="Belarus"/>
            </f:content>
        </f:SimpleForm>
    </VBox>

</mvc:View>