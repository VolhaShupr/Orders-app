<mvc:View xmlns:mvc="sap.ui.core.mvc"
          xmlns:f="sap.ui.layout.form"
          xmlns="sap.m">
    <VBox class="sapUiSmallMarginEnd">
        <f:SimpleForm id="SimpleFormToolbar"
                      editable="true"
                      layout="ResponsiveGridLayout"
                      labelSpanL="2"
                      labelSpanM="2"
                      emptySpanL="5"
                      emptySpanM="5"
                      columnsL="1"
                      columnsM="1">
            <f:toolbar>
                <Toolbar id="TB1">
                    <Title text="Customer info form" level="H4" titleStyle="H4"/>
                    <Button icon="sap-icon://edit"/>
                </Toolbar>
            </f:toolbar>
            <f:content>
                <Label text="First name" />
                <Input value="{odata>customerInfo/firstName}" />

                <Label text="Last name" />
                <Input value="{odata>customerInfo/lastName}"/>

                <Label text="Address" />
                <Input value="{odata>customerInfo/address}"/>

                <Label text="Phone"/>
                <Input value="{odata>customerInfo/phone}"/>

                <Label text="Email" />
                <Input value="{odata>customerInfo/email}"/>
            </f:content>
        </f:SimpleForm>
    </VBox>

</mvc:View>