<mvc:View
    xmlns:m="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.uxap"
    xmlns:layout="sap.ui.layout"
    xmlns:ship="Olga.Shupranova.app.block.shipInfo"
    xmlns:customer="Olga.Shupranova.app.block.customerInfo"
    xmlns:products="Olga.Shupranova.app.block.products"
    controllerName="Olga.Shupranova.app.controller.OrderDetails">
    <m:Page
        title="Order details"
        showNavButton="true"
        navButtonPress="onNavBack">
        <m:content>
            <ObjectPageLayout id="ObjectPageLayout">
                <headerTitle>
                    <ObjectPageHeader
                              objectTitle="{parts: [{path: 'odata>id'}, {path: 'odata>summary/createdAt'}],
                                            formatter: 'Olga.Shupranova.app.Formatter.orderHeaderFormatter'}"
                              objectSubtitle="Total price {odata>summary/totalPrice} {odata>summary/currency}"/>
                </headerTitle>
                <headerContent>
                    <layout:VerticalLayout>
                    <m:ObjectAttribute text="Status: {odata>summary/status}"/>
                    <m:ObjectAttribute text='Customer: {odata>summary/customer}'/>
                    </layout:VerticalLayout>
                </headerContent>
                <sections>
                    <ObjectPageSection title="Ship info">
                        <subSections>
                            <ObjectPageSubSection title="Ship info">
                                <blocks>
                                    <ship:BlockShipInfo id="shipInfo"/>
                                </blocks>
                            </ObjectPageSubSection>
                        </subSections>
                    </ObjectPageSection>
                    <ObjectPageSection title="Customer info">
                        <subSections>
                            <ObjectPageSubSection title="Customer info">
                                <blocks>
                                    <customer:BlockCustomerInfo id="customerInfo"/>
                                </blocks>
                            </ObjectPageSubSection>
                        </subSections>
                    </ObjectPageSection>
                    <ObjectPageSection title="Products">
                        <subSections>
                            <ObjectPageSubSection title="Products">
                                <blocks>
                                    <products:BlockProducts id="productsInfo"
                                                            dummy="onProductDetailsPress"/>
                                </blocks>
                            </ObjectPageSubSection>
                        </subSections>
                    </ObjectPageSection>
                </sections>
            </ObjectPageLayout>
        </m:content>
    </m:Page>
</mvc:View>