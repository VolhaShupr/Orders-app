<mvc:View
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	controllerName="Olga.Shupranova.app.controller.OrdersOverview">
	<App>
		<pages>
			<Page title="Orders overview">
				<content>
					<IconTabBar
							id="idIconTabBar"
							select="onQuickFilter"
							expandable="false">
						<items>
							<IconTabFilter
									showAll="true"
									count="4"
									text="All orders"
									key="All" >
							</IconTabFilter>
							<IconTabSeparator />
							<IconTabFilter
									icon="sap-icon://pending"
									iconColor="Negative"
									count="3"
									text="Pending"
									key="Pending" />
							<IconTabFilter
									icon="sap-icon://accept"
									iconColor="Positive"
									count="1"
									text="Accepted"
									key="Accepted" />
						</items>
						<content>
						<Table items="{odata>/Orders}"
							   id="ordersTable">
							<headerToolbar>
								<Toolbar>
									<ToolbarSpacer/>
									<Button icon="sap-icon://add"/>
								</Toolbar>
							</headerToolbar>
							<columns>
								<Column><Text text="ID" /></Column>
								<Column><Text text="Customer" /></Column>
								<Column><Text text="Created at" /></Column>
								<Column><Text text="Shipped at" /></Column>
								<Column><Text text="Status" /></Column>
								<Column><Text text="Total price" /></Column>
								<Column><Text text="Ship country" /></Column>
								<Column width="1.5rem"/>
								<Column width="1.5rem"/>
							</columns>
							<items>
								<ColumnListItem type="Active"
												press="onOrderDetailsPress">
									<cells>
										<Text text="{odata>id}" />
										<Text text="{odata>summary/customer}" />
										<Text text="{path: 'odata>summary/createdAt',
												formatter: 'Olga.Shupranova.app.Formatter.dateFormatter'}"/>
										<Text text="{path: 'odata>summary/shippedAt',
												formatter: 'Olga.Shupranova.app.Formatter.dateFormatter'}" />
										<Text text="{odata>summary/status}" />
										<Text text="{parts:[{path:'odata>summary/totalPrice'},
												{path:'odata>summary/currency'}],
												type: 'sap.ui.model.type.Currency',
												formatOptions: {minFractionDigits: 0}}"/>
										<Text text="{odata>shipTo/country}" />
										<Button icon="sap-icon://slim-arrow-right"
												type="Transparent"
												press="onOrderDetailsPress"/>
										<Button icon="sap-icon://sys-cancel"
												type="Transparent"
												press="onPress"/>
									</cells>
								</ColumnListItem>
							</items>
						</Table>
						</content>
					</IconTabBar>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>