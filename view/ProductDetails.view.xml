<mvc:View
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    controllerName="Olga.Shupranova.app.controller.ProductDetails">
    <Page
        title="Product details"
        showNavButton="true"
        navButtonPress="onNavBack">
        <ObjectHeader
            title="{odata>name}"
            number="{odata>totalPrice}"
            numberUnit="{odata>currency}"
            backgroundDesign="Solid"
            condensed="true">
            <attributes>
                <ObjectAttribute title="Quantity" text="{odata>quantity}, price: {odata>price}"/>
            </attributes>
        </ObjectHeader>
        <Panel>
            <Toolbar>
                <Label text="Author name:"
                       class="sapUiSmallMarginCenter" />
                <Input placeholder="Enter name"
                width="10rem"/>
                <Label text="Rating:"/>
                <RatingIndicator maxValue="5"
                                 class="sapUiSmallMargiCenter"
                                 value="0"/>
            </Toolbar>
            <FeedInput
                post="onPost"
                showIcon="true" />
            <List items="{odata>comments}"
                id="idCommentsList"
                showSeparators="Inner">
                <FeedListItem
                    sender="{odata>author}"
                    info="Rating: {odata>rating}"
                    text="{odata>comment}"
                    />
            </List>
        </Panel>
    </Page>
</mvc:View>